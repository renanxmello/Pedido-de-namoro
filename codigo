    <script>
        function fuja(){
            let botao = document.getElementById("nao");

            let x = Math.floor(Math.random() * 400);
            let y = Math.floor(Math.random() * 400);

            botao.style.marginTop = y + "px";
            botao.style.marginLeft = x + "px";
        }   

        function sim(){
            alert("Sabia que você não resistiria a minha beleza kkkk Te amo muito, feliz dia dos namorados meu amor <3");
